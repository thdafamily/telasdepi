<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadRoupaFragment">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        app:tint="@color/green" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/green" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="236dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_name"
        android:textColor="@color/green"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_image_rounded"
        android:contentDescription="@string/app_photo"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/casaco" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_cor"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="76dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Círculo cinza -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_gray" />

        <!-- Círculo preto -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_black" />

        <!-- Círculo azul -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_blue" />

        <!-- Círculo vermelho -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_red" />

        <!-- Círculo verde -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_green" />

        <!-- Círculo amarelo -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_yellow" />

        <!-- Círculo roxo -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/circle_purple" />

        <!-- Círculo arco-íris (gradiente) -->
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            android:background="@drawable/rainbow" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="178dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="312dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_categoria"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:alignmentMode="alignMargins"
        android:columnCount="5"
        android:padding="8dp"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_roupa" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_acessorio"
            android:textSize="11sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_calcado"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_trajebanho"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_esporte" />

        <!-- Segunda fileira -->

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_masculino"
            android:textSize="11sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_feminino"
            android:textSize="12sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_infantil" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_intima" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@drawable/selector_categoria"
            android:button="@null"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_unissex" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/rodape"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/VerdeClaro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/closet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/closeticon"/>
        <ImageView
            android:id="@+id/pesquisar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/search_branco" />
        <ImageView
            android:id="@+id/cadastrarRoupa"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:src="@drawable/baseline_add_circle_24" />
        <ImageView
            android:id="@+id/doacao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/iconedoacao" />
        <ImageView
            android:id="@+id/perfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:src="@drawable/person_branco" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="157dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="332dp"
        android:fontFamily="@font/playfair_display_semibold"
        android:text="@string/app_tamanho"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/Tamanho"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/bg_segmented_border"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbPP"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/b1"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_pp"
            android:textColor="@color/green"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbP"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/b3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_p"
            android:textColor="@color/green"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbM"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/b3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_m"
            android:textColor="@color/green"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/b3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_g"
            android:textColor="@color/green"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbGG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/b3"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_gg"
            android:textColor="@color/green"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

        <RadioButton
            android:id="@+id/rbXGG"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:background="@drawable/b2"
            android:button="@null"
            android:checked="true"
            android:fontFamily="@font/raleway_extrabold"
            android:gravity="center"
            android:text="@string/app_xgg"
            android:textColor="@color/green"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="489dp" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Proximo"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="688dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/proximo"
        android:text="@string/app_prox"
        android:textColor="#083108"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>